// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Poll {
  id        String   @id @default(cuid())
  title     String
  code      String   @unique
  ownerId   String?
  createdAt DateTime @default(now())

  participants Participant[]
  owner        User?         @relation(fields: [ownerId], references: [id])
}

model Participant {
  id      String  @id @default(cuid())
  guesses Guess[]
  userId  String
  pollId  String

  user User @relation(fields: [userId], references: [id])
  poll Poll @relation(fields: [pollId], references: [id])

  @@unique([userId, pollId])
}

model User {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  avatarUrl String?
  createdAt DateTime @default(now())

  participatingAt Participant[]
  ownpolls        Poll[]
}

model Game {
  id           String   @id @default(cuid())
  date         DateTime
  firstTeamId  String
  secondTeamId String
  guesses      Guess[]

  firstTeam  Team @relation("FirstTeam", fields: [firstTeamId], references: [id])
  secondTeam Team @relation("SecondTeam", fields: [secondTeamId], references: [id])
}

model Guess {
  id              String   @id @default(cuid())
  participantId   String
  gameId          String
  firstTeamScore  Int
  secondTeamScore Int
  createdAt       DateTime @default(now())

  game        Game        @relation(fields: [gameId], references: [id])
  participant Participant @relation(fields: [participantId], references: [id])

  @@unique([participantId, gameId])
}

model Team {
  id              String   @id @default(cuid())
  teamName        String
  teamShieldUrl   String
  createdAt       DateTime @default(now())
  firstTeamGames  Game[]   @relation("FirstTeam")
  secondTeamGames Game[]   @relation("SecondTeam")
}
